<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gym Members</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1>Gym Members</h1>

        <!-- Search Form -->
        <form id="searchForm" action="/search" method="get">
            <input type="text" name="name" placeholder="Search by name..." required>
            <button type="submit">Search</button>
        </form>

        <!-- Members Table -->
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Phone</th>
                    <th>Membership</th>
                    <th>Start Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (members && members.length > 0) { %>
                    <% members.forEach(member => { %>
                        <tr>
                            <td><%= member.name %></td>
                            <td><%= member.age %></td>
                            <td><%= member.phone %></td>
                            <td><%= member.membershipType %></td>
                            <td><%= member.startDate.toISOString().split('T')[0] %></td>
                            <td>
                                <!-- Delete Button -->
                                <form action="/delete/<%= member._id %>" method="post" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this member?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No members found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
      <a href="/" class="link">Add New Member</a>
    </div>

</body>
</html>
